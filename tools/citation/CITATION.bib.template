{%- if include_book %}
@book{{ '{' }}{{ book_key }}:{{ book_year }},
  author    = { {{ book_author }} },
  title     = { {{ book_title }} },
  publisher = { {{ book_publisher }} },
  year      = { {{ book_year }} },
  edition   = { {{ book_edition }} },
  url       = { {{ book_url }} },
  isbn      = { {{ book_isbn }} }
}
{%- endif %}

