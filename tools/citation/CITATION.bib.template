{%- if include_article %}
@article{{ '{' }}{{ article_key }}:{{ article_year }},
  author  = { {{ article_authors }} },
  title   = { {{ article_title }} },
  journal = { {{ article_journal }} },
  year    = { {{ article_year }} },
  volume  = { {{ article_volume }} },
  number  = { {{ article_number }} },
  pages   = { {{ article_pages }} },
  doi     = { {{ article_doi }} },
  url     = { {{ article_url }} }
}
{%- endif %}

{#-
% ---------------------------------------------------------
% BOOK TEMPLATE (Future use):
% Commented out for now, uncomment when you need it.
